<% #title "Mobile Apps" %>

<div class="well">
	<table class="table table-striped">
	  <thead>
  	  <tr>
  	    <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
  	  </tr>
  	</thead>
  	<tbody>
  	  <% @users.each do |user| %>
  	    <tr>
  	      <td><%= user.last_name + ", " + user.first_name %></td>
  	      <td><%= link_to "Show", admin_user_path(user), :class => 'btn btn-mini btn-primary' %></td>
  	      <td><%= link_to "Edit", edit_admin_user_path(user), :class => 'btn btn-mini' %></td>
  	      <td><%= link_to "Destroy", admin_user_path(user), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger' %></td>
  	    </tr>
  	  <% end %>
  	</tbody>
	</table>
</div>
