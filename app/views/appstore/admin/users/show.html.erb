<% #title "Mobile App Details" %>

<div class="well">
  <p>
    <strong>Name:</strong>
	  <%= @user.last_name + ", " + @user.first_name %>
  </p>
  <p>
    <strong>Email:</strong>
	  <%= @user.email %>
  </p>
  <p>
    <strong>Organization(s):</strong>
    <% orgs_string = "" %>
    <% @user.organizations.each do |org| %>
      <% if @user.organizations.index(org) > 0 %>
        <% orgs_string += ", " %>
      <% end %>
      <% orgs_string += org.name %>
    <% end %>
    <%= orgs_string %>
  </p>
  <p>
    <strong>Is Admin:</strong>
    <% if @user.admin? %>
      Yes
    <% else %>
      No
    <% end %>
  </p>
  </div>
<p>
  <%= link_to "Edit", edit_admin_user_path(@user), :class => 'btn' %> |
  <%= link_to "Destroy", edit_admin_user_path(@user), :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %> |
  <%= link_to "View All", admin_users_path, :class => 'btn btn-danger' %>
</p>