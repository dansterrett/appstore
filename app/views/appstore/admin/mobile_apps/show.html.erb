<% #title "Mobile App Details" %>

<div class="well">
  <p>
    <strong>Name:</strong>
	  <%= @mobile_app.name %>
  </p>
  <p>
    <strong>Icon:</strong>
	  <% if !(@mobile_app.icon_file_name == nil) %>
	    <%= image_tag @mobile_app.icon.url(:thumb) %>
	  <% else %>
	    None
	  <% end %>
  </p>
  <p>
    <strong>plist:</strong>
    <% if !(@mobile_app.plist_file_name == nil) %>
	    <%= link_to "View", @mobile_app.plist.url %>
	  <% else %>
	    None
    <% end %>
  </p>
  <p>
    <strong>ipa:</strong>
    <% if !(@mobile_app.ipa_file_name == nil) %>
	    <%= link_to "Download", @mobile_app.ipa.url %>
	  <% else %>
	    None
    <% end %>
  </p>
  <p>
    <strong>Organization:</strong>
    <% org_id = @mobile_app.organization_id %>
    <% if org_id %>
	    <%= Alohomora::Organization.find(org_id).name %>
	  <% else %>
	    None
    <% end %>
  </p>
  </div>
<p>
  <%= link_to "Edit", edit_admin_mobile_app_path(@mobile_app), :class => 'btn' %> |
  <%= link_to "Destroy", admin_mobile_app_path(@mobile_app), :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %> |
  <%= link_to "View All", admin_mobile_apps_path, :class => 'btn btn-danger' %>
</p>